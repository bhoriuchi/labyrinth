                <div id="wf-ok-modal" title="OK" class="container" style="display:none;">
                    <div class="row">
                        <div class="col-xs-2">
                            <span class="glyphicon glyphicon-ok-sign dialog-icon dialog-ok-icon"></span>
                        </div>
                        <div id="wf-ok-modal-detail" class="dialog-message col-xs-10"></div>
                    </div>
                    <div class="row">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <div class="col-xs-7"></div>
                                <div class="col-xs-3">
                                    <button type="button" wfDialog="wf-ok-modal" class="btn btn-default btn-lg dialog-btn dialog-btn-cancel">OK</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="wf-error-modal" title="Error" class="container" style="display:none;">
                    <div class="row">
                        <div class="col-xs-2">
                            <span class="glyphicon glyphicon-exclamation-sign dialog-icon dialog-error-icon"></span>
                        </div>
                        <div id="wf-error-modal-detail" class="dialog-message col-xs-10"></div>
                    </div>
                    <div class="row">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <div class="col-xs-7"></div>
                                <div class="col-xs-3">
                                    <button type="button" wfDialog="wf-error-modal" class="btn btn-default btn-lg dialog-btn dialog-btn-cancel">OK</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="wf-loading-modal" style="display:none;">
                    <div>
                        <img src="{{public}}/img/ajax-loader.gif"> Loading
                    </div>
                </div>
            </div>
        <!-- requirejs -->
        <script data-main="{{public}}/js/app" src="{{public}}/js/vendor/require.js"></script>
    </body>
