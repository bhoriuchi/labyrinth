            <div class="container">
                <!-- Workflow Menu -->
                <div id="wf-menu">
                    <div id="itemSelect" style="height: 600px">
                        <h3>General</h3>
                        <div>
                            <div>
                                <input type="text" id="generalFilter">&nbsp;&nbsp;<span class="glyphicon glyphicon-search"></span>
                                <br><br>
                                <ul class="itemList" id="generalObjects"></ul>
                            </div>
                        </div>
                        <h3>Tasks</h3>
                        <div>
                            <div>
                                <input type="text" id="taskFilter">&nbsp;&nbsp;<span class="glyphicon glyphicon-search"></span>
                                <div id="taskObjects"></div>
                            </div>
                        </div>
                        <h3>Workflows</h3>
                        <div>
                            <div>
                                <input type="text" id="workflowFilter">&nbsp;&nbsp;<span class="glyphicon glyphicon-search"></span>
                                <div id="workflowObjects"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="wf-header"></div>
                <div id="wf-viewport">
                    <div id="wf-workarea"></div>
                </div>
                <div id="wf-droparea"></div>
                <div id="wf-toolbar">
                    <span class="btn btn-default glyphicon glyphicon-pencil gi-md" id="wf-toolbar-edit" data-toggle="tooltip" title="Edit workflow properties"></span>
                    <span class="btn btn-default glyphicon glyphicon-floppy-save gi-md" id="wf-toolbar-save" data-toggle="tooltip" title="Save workflow changes"></span>
                    <span class="btn btn-default glyphicon glyphicon-time gi-md" id="wf-toolbar-version" data-toggle="tooltip" title="Version options"></span>
                    <span class="btn btn-default glyphicon glyphicon-refresh gi-md" id="wf-toolbar-reset" data-toggle="tooltip" title="Reset pan and zoom"></span>
                    <span class="btn btn-default glyphicon glyphicon-info-sign gi-md" data-toggle="tooltip" title="Workflow Run Information"></span>
                    <span class="btn btn-default glyphicon glyphicon-cog gi-md" data-toggle="tooltip" title="UI Settings"></span>
                    <span class="btn btn-default glyphicon glyphicon-plus gi-md" data-toggle="tooltip" title="New Workflow"></span>
                </div>
                <img src="{{public}}/img/chevrons.svg" class="rotate0" id="wf-menuToggle" data-toggle="tooltip" title="Workflow items">
                <div id="wf-version-workflow" title="Workflow Version Options" style="display: none;">
                    <br><br>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="wf-version-comment" data-toggle="tooltip" title="Comment for this workflow version" class="control-label col-xs-2">Comment:</label>
                            <div class="col-xs-8">
                                <input id="wf-version-comment" type="text" name="wf-version-comment" value="" class="form-control">
                            </div>
                            <button type="button" class="btn btn-primary btn-lg">
                            <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> Save
                            </button>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label data-toggle="tooltip" title="Publish options" class="control-label col-xs-2">Publish:</label>
                            <div class="btn-group col-xs-8" data-toggle="buttons">
                                <button id="wf-publish-btn" name="wf-publish-btn" class="btn btn-primary btn-lg publish-button">
                                <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> Publish
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-2"></label>
                            <div class="btn-group col-xs-8" data-toggle="buttons">
                                <button id="wf-unpublish-btn" name="wf-unpublish-btn" class="btn btn-info btn-lg publish-button">
                                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Unpublish
                                </button>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label data-toggle="tooltip" title="Activation options" class="control-label col-xs-2">Activation:</label>
                            <div class="btn-group col-xs-8" data-toggle="buttons">
                                <button id="wf-activate-btn" name="wf-activate-btn" onClick="javascript:console.log('clicked a disabled');" class="btn btn-default btn-lg publish-button">
                                <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> Activate
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-2"></label>
                            <div class="btn-group col-xs-8" data-toggle="buttons">
                                <button id="wf-deactivate-btn" name="wf-deactivate-btn" class="btn btn-default btn-lg publish-button">
                                <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span> Deactivate
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div id="wf-edit-workflow" title="Edit Workflow" style="display: none;">
                    <br><br>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="wf-wf-name" data-toggle="tooltip" title="The name of the workflow" class="control-label col-xs-2">Name:</label>
                            <div class="col-xs-10">
                                <input id="wf-wf-name" type="text" name="wf-wf-name" value="" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="wf-wf-description" data-toggle="tooltip" title="Optional workflow description" class="control-label col-xs-2">Description:</label>
                            <div class="col-xs-10">
                                <input id="wf-wf-description" type="text" name="wf-wf-description" value="" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-offset-2 col-xs-10">
                                <div class="checkbox">
                                    <label data-toggle="tooltip" title="Always use the current version"><input id="wf-wf-usecurrent" type="checkbox" value="">Use Current</label>
                                </div>
                            </div>
                        </div>
                    </form>
                    <label for="wf-attributes-list">Attributes:</label>
                    <button type="button" wfParamType="attribute" class="btn btn-primary btn-xs new-param">
                    <span class="glyphicon glyphicon-plus"></span> New Attribute
                    </button>
                    <div id="wf-attributes-list"></div>
                </div>
                <div id="wf-edit-step" title="Edit Step" style="display:none;">
                    <div id="wf-editTabs">
                        <ul>
                            <li><a href="#wf-tab-general">General</a></li>
                            <li><a href="#wf-tab-input">Input</a></li>
                            <li><a href="#wf-tab-output">Output</a></li>
                            <li id="wf-tab-source-tab"><a href="#wf-tab-source">Scripting</a></li>
                        </ul>
                        <div id="wf-tab-general">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label for="wf-step-name" data-toggle="tooltip" title="The name of the step" class="control-label col-xs-2">Name:</label>
                                    <div class="col-xs-10">
                                        <input id="wf-step-name" type="text" name="wf-step-name" value="" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="wf-step-timeout" data-toggle="tooltip" title="Maximum runtime of task in milliseconds; 0 for no timeout" class="control-label col-xs-2">Timeout (ms):</label>
                                    <div class="col-xs-10">
                                        <input id="wf-step-timeout" type="text" name="wf-step-timeout" value="" class="form-control shortTextField">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-offset-2 col-xs-10">
                                        <div class="checkbox">
                                            <label data-toggle="tooltip" title="Always use the current version"><input id="wf-step-usecurrent" type="checkbox" value="">Use Current</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-offset-2 col-xs-10">
                                        <div class="checkbox">
                                            <label data-toggle="tooltip" title="Fail the entire workflow if this step fails"><input id="wf-step-failworkflow" type="checkbox" value="">Fail Workflow</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-offset-2 col-xs-10">
                                        <div class="checkbox">
                                            <label data-toggle="tooltip" title="Do not proceed to the next step on completion"><input id="wf-step-wait" type="checkbox" value="">Wait On Success</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="wf-step-requirekey-form">
                                    <div class="col-xs-offset-2 col-xs-10">
                                        <div class="checkbox">
                                            <label data-toggle="tooltip" title="Require a run key to move to the next step"><input id="wf-step-requirekey" type="checkbox" value="">Require Key</label>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div id="wf-tab-input">
                            <button type="button" wfParamType="input" class="btn btn-primary btn-xs new-param">
                            <span class="glyphicon glyphicon-plus"></span> New Input
                            </button>
                            <div id="wf-input-list"></div>
                        </div>
                        <div id="wf-tab-output">
                            <button type="button" wfParamType="output" class="btn btn-primary btn-xs new-param">
                            <span class="glyphicon glyphicon-plus"></span> New Output
                            </button>
                            <div id="wf-output-list"></div>
                        </div>
                        <div id="wf-tab-source">
                            <textarea id="wf-tab-code"></textarea>
                        </div>
                    </div>
                </div>
                <div id="wf-confirm-modal" title="Confirm" class="container" style="display:none;">
                    <div class="row">
                        <div class="col-xs-2">
                            <span class="glyphicon glyphicon-question-sign dialog-icon dialog-confirm-icon"></span>
                        </div>
                        <div id="wf-confirm-modal-detail" class="dialog-message col-xs-10"></div>
                    </div>
                    <div class="row">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3">
                                    <button type="button" id="wf-confirm-button" class="btn btn-default btn-lg dialog-btn">OK</button>
                                </div>
                                <div class="col-xs-3">
                                    <button type="button" wfDialog="wf-confirm-modal" class="btn btn-default btn-lg dialog-btn dialog-btn-cancel">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!--
                <div id="wf-prompt-modal" title="Prompt" class="container" style="display:none;">
                    <div class="row">
                        <div class="col-xs-2">
                            <span class="glyphicon glyphicon-question-sign dialog-icon dialog-confirm-icon"></span>
                        </div>
                        <div id="wf-confirm-modal-detail" class="dialog-message col-xs-10"></div>
                    </div>
